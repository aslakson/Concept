- if user_signed_in?
  %ul.nav.secondary-nav
    %li.menu
      %a.menu= "My account"
      %ul.dropdown-menu
        %li 
          = link_to('My account', edit_user_registration_path)
        %li
          = link_to('Sign out', destroy_user_session_path, :method=>'delete', :class => "pull-right")
- else
  = form_tag user_session_path, :class => "pull-right" do
    = text_field_tag 'user[email]', nil, :placeholder => "Username", :class => "input-small"
    = password_field_tag 'user[password]', nil, :placeholder => "Password", :class => "input-small"
    %button.btn Sign in
= render 'searches/simple'
