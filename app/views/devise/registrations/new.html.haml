%h2 Sign up

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!

  .clearfix
    = f.label :first_name
    .input
      = f.email_field :first_name

  .clearfix
    = f.label :last_name
    .input
      = f.email_field :last_name

  .clearfix
    = f.label :email
    .input
      = f.email_field :email

  .clearfix
    = f.label :zip_code
    .input
      = f.email_field :zip_code

  .clearfix
    = f.label :password
    .input
      = f.email_field :password

  .clearfix
    = f.label :password_confirmation
    .input
      = f.email_field :password_confirmation

  .actions
    = f.submit "Sign up", :class => "btn primary"

= render :partial => "devise/shared/links"
